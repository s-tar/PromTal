@import 'mixins'

.comments
  padding: 0
  padding-top: 5px
  list-style: none
  padding-left: 10px
  margin-bottom: 0px
  ul
    list-style: none
    padding-left: 40px
  .comment
    position: relative
    .comments.new
      padding-top: 0px
    .user-icon
      position: absolute
    .message
      padding: 5px 10px
      margin-left: 60px
      -border-radius 3px
      min-height: 50px
      position: relative
      overflow: visible

      &:hover .answer-button
        display: block
      .answer-button
        float: right
        display: none
      .text
        white-space: pre-wrap
      .datetime
        color: #aaa
        font-size: 0.8em
        padding-left: 10px
      .arrow
        position: absolute
        color: #fff
        left: -0.35em
        font-size: 1.3em
        top: 5px
      .smile
        margin-top: -4px
  .quotes, .comments.new
    ul
      padding-left: 20px
    .comment
      .user-icon
        width: 30px
        height: 30px
        margin-top: 0px
      .message
        margin-left: 40px
        min-height: 30px
        .arrow
          top: 5px

.comments.new
  .user-icon
    /*width: 40px*/
    /*height: 40px*/
    margin-top: -5px
  .message
    padding: 0
    min-height: 39px
    .text
      white-space: normal
  form
    padding: 0
    float: none
    text-align: right
    position: relative
    .wrapper
      position: relative
      padding-right: 80px
  textarea
    border: 0 none
    min-height: 39px
    height: 39px
    margin-bottom: -5px
    -border-radius 3px 0 0 3px
    padding-top: 12px
    resize: none
    overflow: hidden
  .right-buttons
    top: 0
    right: 0
    position: absolute
    height: 100%
  .send
    display: inline-block
    outline: none
    padding: 0
    margin: 0
    width: 40px
    height: 100%
    color: white
    border: 0 none
    -border-radius 0 3px 3px 0
    text-align: center
    font-size: 1.2em
    &[disabled]
      opacity: 0.7
      &:hover
        background: #fd8a16
  .media-uploader
    margin: 0
    display: inline-block
    height: 39px
    width: 39px
    font-size: 1.5em
    padding: 4px
.comments:not(.new)
  .media-holder
    margin: 3px -9px -4px